---
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.astro";
import Hero from "../sections/Hero.astro";
---

<Layout title="Yoann Fleury - Web Developer">
  <Hero />

  <div class="px-6 py-24 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2
        class="text-4xl font-bold font-heading tracking-tight text-secondary sm:text-6xl"
      >
        Follow me on
      </h2>
      <p class="mt-6 text-lg leading-8 text-primary">
        <Link
          href="https://twitter.com/yoannfleurydev"
          title="Yoann Fleury's Twitter profile">Twitter</Link
        >,
        <Link
          href="https://www.instagram.com/yoannfleurydev"
          title="Yoann Fleury's Instagram profile">Instagram</Link
        >,
        <Link
          href="https://github.com/yoannfleurydev"
          title="Yoann Fleury's GitHub profile">GitHub</Link
        >,
        <Link
          href="https://changelog.yoannfleury.dev"
          title="Yoann Fleury's Polywork page">Polywork</Link
        >, or add me on Discord with the username
        <em>yoannfleurydev</em>.
      </p>
    </div>

    <p></p>
  </div>
</Layout>
