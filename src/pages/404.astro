---
import Layout from "@/layouts/Layout.astro";

const links = [
  {
    name: "Blog",
    href: "/blog",
    description: "Read my latest news and articles.",
  },
  {
    name: "Talks",
    href: "/talks",
    description: "The talks I've given over the years",
  },
  {
    name: "Recipes",
    href: "/recipes",
    description: "Some cooking recipes I like to do",
  },
];
---

<Layout title="This page does not exist">
  <div>
    <main class="mx-auto w-full max-w-7xl px-6 pb-16 pt-10 sm:pb-24 lg:px-8">
      <div class="mx-auto mt-20 max-w-2xl text-center sm:mt-24">
        <p class="text-base font-semibold leading-8 text-secondary">404</p>
        <h1
          class="mt-4 text-3xl font-bold tracking-tight text-primary sm:text-5xl"
        >
          This page does not exist
        </h1>
        <p
          class="mt-4 text-base leading-7 text-primary sm:mt-6 sm:text-lg sm:leading-8"
        >
          Sorry, we couldn’t find the page you’re looking for.
        </p>
      </div>
      <div class="mx-auto mt-16 flow-root max-w-lg sm:mt-20">
        <h2 class="sr-only">Popular pages</h2>
        <ul
          role="list"
          class="-mt-6 divide-y divide-gray-900/5 border-b border-gray-900/5"
        >
          {
            links.map((link) => (
              <li class="relative flex gap-x-6 py-6">
                <div class="flex-auto">
                  <h3 class="text-sm font-semibold leading-6 text-gray-50">
                    <a href={link.href}>
                      <span aria-hidden="true" class="absolute inset-0" />
                      {link.name}
                    </a>
                  </h3>
                  {link.description && (
                    <p class="mt-2 text-sm leading-6 text-gray-400">
                      {link.description}
                    </p>
                  )}
                </div>
                <div class="flex-none self-center">
                  <span class="text-gray-400">&rarr;</span>
                </div>
              </li>
            ))
          }
        </ul>
        <div class="mt-10 flex justify-center">
          <a href="/" class="text-sm font-semibold leading-6 text-secondary">
            <span aria-hidden="true">&larr;</span>
            Back to home
          </a>
        </div>
      </div>
    </main>
  </div>
</Layout>
