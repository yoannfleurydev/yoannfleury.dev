---
import "@fontsource-variable/sono";
import "@fontsource-variable/work-sans";
import Footer from "../sections/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.png" sizes="32x32" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="Yoann Fleury, frontend web developer at BearStudio and volunteer at Codeurs en Seine"
    />
  </head>
  <body class="flex flex-col h-screen bg-background text-primary">
    <main class="flex-1 justify-between">
      <slot />
    </main>
    <Footer />
  </body>
</html>
