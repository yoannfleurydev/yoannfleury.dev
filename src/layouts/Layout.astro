---
import "@fontsource-variable/sono";
import "@fontsource-variable/work-sans";
import "@shikijs/twoslash/style-rich.css";
import Footer from "@/sections/Footer.astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import Analytics from "@vercel/analytics/astro";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Frontend web developer at BearStudio and organizer at Fork it! Community. Reach me on my social networks to contact me.",
} = Astro.props;

import "@/styles/globals.css";
import "@/styles/code.scss";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import { getRelativeLocaleUrl } from "astro:i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.png" sizes="32x32" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href={Astro.url} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content={description ||
        "Yoann Fleury, frontend web developer at BearStudio and organizer at Fork it! Community"}
    />
    <slot name="seo" />
  </head>
  <body class="flex flex-col h-screen bg-gray-900 text-primary">
    <header class="absolute inset-x-0 top-0 z-50">
      <div class="mx-auto max-w-7xl">
        <div class="px-6 pt-6 lg:max-w-2xl lg:pl-8 lg:pr-0">
          <nav
            class="flex items-center justify-between lg:justify-start"
            aria-label="Global"
          >
            <div class="flex gap-x-8">
              <a
                href={getRelativeLocaleUrl(lang, "/")}
                class="text-sm font-semibold text-primary hover:text-secondary"
                >{t("nav.home")}</a
              >
              <a
                href={getRelativeLocaleUrl(lang, "/blog/")}
                class="text-sm font-semibold text-primary hover:text-secondary"
                >{t("nav.blog")}</a
              >
              <a
                href={getRelativeLocaleUrl(lang, "/projects/")}
                class="text-sm font-semibold text-primary hover:text-secondary"
                >{t("nav.projects")}</a
              >
              <a
                href={getRelativeLocaleUrl(lang, "/talks/")}
                class="text-sm font-semibold text-primary hover:text-secondary"
                >{t("nav.talks")}</a
              >
            </div>
          </nav>
        </div>
      </div>
    </header>
    <main class="flex-1 justify-between">
      <slot />
    </main>
    <Footer />
    <SpeedInsights />
    <Analytics />
  </body>
</html>
